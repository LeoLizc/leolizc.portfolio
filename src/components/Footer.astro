---
import { useTranslations } from '@i18n/ui';

const { currentLocale } = Astro;
const t = useTranslations(currentLocale);
const year = new Date().getFullYear();
const routeLocale = (currentLocale ?? 'es') === 'es' ? '' : `${currentLocale}/`;
---

<footer
  class='flex flex-row flex-wrap justify-between w-full lg:w-[1020px] mb-6 px-3'
>
  <span class='text-sm text-yellow-200/90'
    >{`Â© ${year} ${t('footer.copy')}`}</span
  >
  <ul
    class='flex flex-wrap items-center mt-3 text-sm font-medium dark:text-white/90 sm:mt-0 gap-4 md:gap-6'
  >
    <li>
      <a href={`/${routeLocale}#contacto`}>{t('footer.contact')}</a>
    </li>
    <li>
      <a href={`tel:+573166574747`}>+57 (316) 657 47 47</a>
    </li>
  </ul>
</footer>
