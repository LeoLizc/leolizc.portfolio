---
import { useTranslations } from '@i18n/ui';

const { currentLocale } = Astro;
const t = useTranslations(currentLocale);
const routeLocale = (currentLocale ?? 'es') === 'es' ? '' : `${currentLocale}/`;
---

<header
  class='flex flex-row lg:justify-between justify-around w-full lg:w-[1020px] p-3 py-4 md:py-2 relative md:fixed top-0 animate-scroll-blur [animation-timeline:scroll()] [animation-range:0_900px] z-20'
>
  <a href={`/${routeLocale}#`} class='hidden sm:block'>
    <img
      src='/imgs/avatar.webp'
      width='48'
      height='48'
      alt='avatar'
      loading='lazy'
      decoding='async'
    />
  </a>
  <nav
    class='flex flex-row items-center gap-6 [&>a]:sm:text-base [&>a]:text-sm'
  >
    <a href={`/${routeLocale}#experiencia`}>
      {t('nav.experience')}
    </a>
    <a href={`/${routeLocale}#proyectos`}>
      {t('nav.projects')}
    </a>
    <a href={`/${routeLocale}#sobre-mi`}>{t('nav.about')}</a>
    <a href={`/${routeLocale}#contacto`}>{t('nav.contact')}</a>
  </nav>
</header>
