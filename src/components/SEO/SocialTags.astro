---
import useI18N from "@i18n/index";
const { OG: defOG, TWITTER: defTweet } = useI18N(Astro).SOCIAL_DEFAULTS;

interface Props {
  OG?: {
    title?: string;
    description?: string;
    image?: string;
    imageAlt?: string;
  };
  TWITTER?: {
    title?: string;
    description?: string;
    image?: string;
    imageAlt?: string;
  };
}

const { OG = {}, TWITTER = {} } = Astro.props;
const { url, currentLocale } = Astro;
---

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta
  property="og:url"
  content={`${url.origin}${url.pathname === "/" ? "" : url.pathname}`}
/>
<meta property="og:locale" content={currentLocale} />
<meta property="og:title" content={OG.title ?? defOG.title} />
<meta property="og:description" content={OG.description ?? defOG.description} />
<meta
  property="og:image"
  content={OG.image ?? "/imgs/social_preview_shots_so.webp"}
/>
<meta property="og:image:alt" content={OG.imageAlt ?? defOG.imageAlt} />
<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@LeoLizcanoP" />
<meta name="twitter:title" content={TWITTER.title ?? defTweet.title} />
<meta
  name="twitter:description"
  content={TWITTER.description ?? defTweet.description}
/>
<meta
  name="twitter:image"
  content={TWITTER.image ?? "/imgs/social_preview_shots_so.webp"}
/>
<meta
  name="twitter:image:src"
  content={TWITTER.image ?? "/imgs/social_preview_shots_so.webp"}
/>
<meta name="twitter:image:alt" content={TWITTER.imageAlt ?? defOG.imageAlt} />
