---
import Badge from '@components/Badge.astro';
import SectionLayout from '@components/SectionLayout.astro';
import SocialPill from '@components/SocialPill.astro';
import MailUpIcon from '@icons/MailUpIcon.astro';
import WritingIcon from '@icons/WritingIcon.astro';
import BuildingIcon from '@icons/BuildingIcon.astro';
import GithubIcon from '@icons/GithubIcon.astro';
import LinkedInIcon from '@icons/LinkedInIcon.astro';
import MailIcon from '@icons/MailIcon.astro';
import TerminalIcon from '@icons/TerminalIcon.astro';
import AboutMe from '@sections/AboutMe.astro';
import ContactMe from '@sections/ContactMe.astro';
import Experience from '@sections/Experience.astro';
import Projects from '@sections/Projects.astro';
import Layout from '@layouts/Layout.astro';
import useI18N from '@i18n/index';

const { main } = useI18N(Astro);
---

<Layout title={main.SEO.title} description={main.SEO.description}>
  <main class=''>
    <SectionLayout
      class='md:pt-52 md:!pb-32 !h-[90svh] md:!h-[100svh] flex items-center'
    >
      <div>
        <a href='/#' class='sm:hidden block mb-3'>
          <img
            src='/imgs/avatar.webp'
            width='43'
            height='43'
            alt={main.PHOTO_ALT}
            loading='lazy'
            decoding='async'
          />
        </a>
        <h1
          class='text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-2 md:gap-5 items-center mb-4'
        >
          {main.TITLE}
          <a
            href='https://www.linkedin.com/in/leonardo-lizcano-pinto0220/'
            class='flex items-center hover:scale-105 transition'
            target='_blank'
            rel='noreferrer noopener'
          >
            <Badge>{main.AVAILABLE_TEXT}</Badge>
          </a>
        </h1>
        <h2 class='text-xl lg:text-2xl dark:text-sky-300 mb-5 text-balance'>
          {main.PRESENTATION}
        </h2>
        <nav class='flex my-5 gap-2 flex-wrap'>
          <SocialPill
            text='Email'
            hiddenText='leolizcanop@gmail.com'
            class='z-20'
          >
            <MailIcon slot='icon' />
          </SocialPill>
          <a
            href='https://www.linkedin.com/in/leonardo-lizcano-pinto0220/'
            class='flex items-center hover:scale-105 transition z-10'
            target='_blank'
            rel='noreferrer noopener'
          >
            <SocialPill text='LinkedIn' hiddenText='Leonardo Lizcano'>
              <LinkedInIcon slot='icon' />
            </SocialPill>
          </a>
          <a
            href='https://github.com/LeoLizc'
            class='flex items-center hover:scale-105 transition z-0'
            target='_blank'
            rel='noreferrer noopener'
          >
            <SocialPill text='Github' hiddenText='Leolizc'>
              <GithubIcon slot='icon' />
            </SocialPill>
          </a>
        </nav>
      </div>
    </SectionLayout>
    <SectionLayout title={main.EXPERIENCE_TITLE} id='experiencia'>
      <BuildingIcon slot='icon' class='size-8' />
      <Experience />
    </SectionLayout>
    <SectionLayout title={main.PROJECTS_TITLE} id='proyectos'>
      <TerminalIcon slot='icon' class='size-8' />
      <Projects />
    </SectionLayout>
    <SectionLayout title={main.ABOUT_TITLE} id='sobre-mi'>
      <WritingIcon slot='icon' class='size-8' />
      <AboutMe />
    </SectionLayout>
    <SectionLayout title={main.CONTACT_TITLE} id='contacto'>
      <MailUpIcon slot='icon' class='size-8' />
      <ContactMe />
    </SectionLayout>
  </main>
</Layout>
